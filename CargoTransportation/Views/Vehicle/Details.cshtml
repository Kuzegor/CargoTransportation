@model CargoTransportation.Models.Vehicle

@{
    ViewData["Title"] = "Details";
}

<h1>Машина</h1>

<div>
    <hr />
    <dl class="row bigger-font-size">
        <dt class = "col-sm-2">
            Марка:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            Модель:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Номер:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            Грузоподъемность:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarryingCapacity)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="button-link blue">Редактировать</a> 
</div>
